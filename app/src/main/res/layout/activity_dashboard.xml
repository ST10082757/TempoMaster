<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808285"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboardtxt"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="0dp"
            android:text="Dashboard" />

        <TextView
            android:id="@+id/continueprojecttxt"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="20dp"
            android:text="Continue Project"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txtaddnewproject"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-20dp"
            android:text="Add new project"
            android:textColor="@android:color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="154dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-100dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/black"

            />

        <Button
            android:id="@+id/btnwork"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-125dp"
            android:background="@drawable/roundbtnwhite"
            android:text="Work"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnschool"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtnwhite"
            android:text="School"
            android:textColor="@color/black"  />

        <Button
            android:id="@+id/btngeneral"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtnwhite"
            android:text="General"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="154dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-131dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/black" />

        <Button
            android:id="@+id/btnworklogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-135dp"
            android:layout_marginRight="-60dp"
            android:text=""
            android:paddingLeft="3dp"
            android:drawableLeft="@drawable/work_on_computer_employee_software_engineer_programmer_svgrepo_com"
            android:background="@drawable/btncircular" />

        <Button
            android:id="@+id/btnschoolLogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-56dp"
            android:layout_marginRight="-140dp"
            android:text=""
            android:paddingLeft="0dp"
            android:drawableLeft="@drawable/school_svgrepo_com"
            android:background="@drawable/btncircular"/>

        <Button
            android:id="@+id/btngeneralLogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-95dp"
            android:text=""
            android:paddingLeft="2dp"
            android:drawableLeft="@drawable/productivity_ability_talent_productive_svgrepo_com"
            android:background="@drawable/btncircular"/>

        <TextView
            android:id="@+id/textView12"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="0dp"
            android:text="Recent Project" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="0dp"
            app:cardBackgroundColor="@color/black"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="-100dp"
                android:text="Project name"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="-60dp"
                android:text="Total time spent"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="-20dp"
                android:text="Time left until due date"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            >

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>